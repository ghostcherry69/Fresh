<%= render 'layouts/userheader' %>

  <main>
    <h2>マイページ</h2>

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if user_signed_in? && @user.id == current_user.id %>

        <h4>登録情報</h4>
        <%= link_to "編集する", edit_public_user_path, class: "btn btn-info" %>

          <table class="table table-striped">
            <tbody>
              <tr>
                <td>氏名</td>
                <td><%= @user.full_users_name %></td>
              </tr>
              <tr>
                <td>カナ</td>
                <td><%= @user.full_users_name_phonetic %></td>
              </tr>
              <tr>
                <td>郵便番号</td>
                <td><%= @user.postal_code %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= @user.street_address %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= @user.phone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
            </tbody>
          </table>

          <p>
            <h4>配送先</h4>
            <%= link_to "一覧を見る", new_public_delivery_destination_path, class: 'btn btn-default' %>
          </p>
          <p>
            <h4>注文履歴</h4>
            <%= link_to "一覧を見る", public_orders_path, class: 'btn btn-default' %>
          </p>

      <% end %>
  </main>

<%= render 'layouts/userfooter' %>