<%= render 'layouts/userheader' %>

  <main>
    <h2>配送先編集</h2>

      <%= form_with model: [:public, @delivery_destination], url:{controller: :delivery_destinations, action: :update}, local: true do |f| %>

        <div class="field_with_errors">
          <% if @delivery_destination.errors.any? %>
            <h3 class="error"><%= @delivery_destination.errors.count %>件のエラーがあります。</h3>
            <ul>
              <% @delivery_destination.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <label>郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code %><br>

    　　<label>住所</label>
        <%= f.text_field :street_address %><br>

        <label>宛名</label>
        <%= f.text_field :name %>

        <%= f.submit '編集する' %>
      <% end %>
  </main>

<%= render 'layouts/userfooter' %>