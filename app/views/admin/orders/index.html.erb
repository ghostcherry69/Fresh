<%= render 'layouts/adminheader' %>

  <main>
    <h2>注文履歴一覧</h2>

      <table class="table table-striped">
        <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <% total_count = 0 %>
          <tr>
            <td>
              <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %>
            </td>
              <td><%= order.user.name %></td>
              <td>
                <% order.ordered_products.each do |ordered_product| %>
                  <% total_count += ordered_product.quantity %>
                <% end %>
                <%= total_count %>
              </td>
              <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </main>

<%= render 'layouts/adminfooter' %>