<%= render 'layouts/anglerheader' %>

  <main>
    <div class="container">
      <div class="row">
        <div class="main-visual">
          <p class="main-visual-text">
          新鮮。そして天然。
          </p>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <table class="genre">
            <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
            </thead>

            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= link_to genre.name, seller_top_path(genre_id: genre.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-xs-9">

          <% if flash[:notice] %>
            <div class="flash">
              <%= flash[:notice] %>
            </div>
          <% end %>

            <h2>商品一覧</h2>
              <div class="product-index">
                <% @products.each do |product| %>
                  <div class="main-content">
                    <div class="main-img">
                    <%= link_to seller_product_path(product.id) do %>
                      <%= attachment_image_tag product, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"%>
                    <% end %>
                    </div>
                    <div class="main-text">
                      <p>【商品名】</p>
                      <%= product.name %>
                      <p>【税抜価格】</p>
                      <%= product.price_excluding_tax.to_s(:delimited, delimiter: ',') %>
                      <p>【販売ステータス】</p>
                      <% if product.is_active == true %>
                        販売中
                      <% else %>
                        販売停止中
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
              <br><%= link_to "商品一覧管理画面へ>", seller_products_path %>
        </div>
      </div>
  </main>

<%= render 'layouts/anglerfooter' %>